{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "outDir": "./",
        "rootDir": "./",
        "lib": ["dom", "es2016"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}